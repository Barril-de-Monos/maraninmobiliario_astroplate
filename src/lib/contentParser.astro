import fs from 'fs';
import path from 'path';
import matter from 'gray-matter';

export async function getSinglePage(folder: string) {
  const files = fs.readdirSync(path.join(process.cwd(), 'src/content', folder));
  return files.map((file) => {
    const content = fs.readFileSync(path.join(process.cwd(), 'src/content', folder, file), 'utf-8');
    const { data } = matter(content);
    return data;
  });
}
