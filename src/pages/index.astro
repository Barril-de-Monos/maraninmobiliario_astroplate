---
import HeroSection from "../layouts/components/HeroSection.astro";
import TextSection from "../layouts/components/TextSection.astro";
import ProductsSection from "../layouts/components/ProductsSection.astro";
import ReasonsToInvestSection from "../layouts/components/ReasonsToInvestSection.astro";
import CallToActionSection from "../layouts/components/CallToActionSection.astro";
import TestimonialsSection from "../layouts/components/TestimonialsSection.astro";
import ContactForm from "../layouts/components/ContactForm.astro";
import type { Product } from '../types';

const products: Product[] = [
  {
    title: "Premium Lots",
    image: "/images/premium-lots.jpg",
    description: "Discover our exclusive premium lots, perfect for building your dream home in a prime location.",
    link: "/premium-lots",
    category: "premium-lots"
  },
  {
    title: "Fully Built Houses",
    image: "/images/fully-built-houses.jpg",
    description: "Move into a fully built house with all the modern amenities and features you desire.",
    link: "/fully-built-houses",
    category: "fully-built-houses"
  },
  {
    title: "Premium Commercial Lots",
    image: "/images/premium-commercial-lots.jpg",
    description: "Invest in premium commercial lots that offer great potential for business growth.",
    link: "/premium-commercial-lots",
    category: "premium-commercial-lots"
  }
];

const reasons = [
  "Beautiful beaches and natural landscapes",
  "Rich cultural heritage and history",
  "Growing economy and investment opportunities",
  "High quality of life and safety",
  "Affordable cost of living"
];

const testimonials = [
  { quote: "Marán Inmobiliario helped us find our dream home in paradise!", author: "John Doe" },
  { quote: "The best real estate service we've ever experienced.", author: "Jane Smith" },
  { quote: "Highly recommend Marán Inmobiliario for their professionalism and expertise.", author: "Carlos Martinez" }
];
---

<HeroSection
  title="Welcome to Marán Inmobiliario"
  subtitle="Your trusted real estate agent and consultant in the Yucatán Peninsula"
  backgroundImage="/images/hero-background.jpg"
  buttonLabel="Get Started"
  buttonLink="#text-section"
/>

<TextSection
  title="About Marán Inmobiliario"
  content="Marán Inmobiliario is a professional real estate agency and consultancy, dedicated to helping you find the perfect property in the Yucatán Peninsula. Whether you're looking for premium lots, fully built houses, or commercial land, we have the expertise and local knowledge to guide you every step of the way."
/>

<ProductsSection products={products} />

<ReasonsToInvestSection reasons={reasons} />

<CallToActionSection
  title="Start Your New Life in Paradise"
  buttonLabel="Contact Us"
  buttonLink="#contact-form"
/>

<TestimonialsSection testimonials={testimonials} />

<ContactForm />
