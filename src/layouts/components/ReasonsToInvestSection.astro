---
interface Props {
  reasons: string[];
}

const { reasons } = Astro.props;
---

<section class="reasons-section py-8 text-center">
  <h2 class="text-3xl font-semibold mb-8">Reasons to Invest in the Yucat√°n Peninsula</h2>
  <ul class="list-none p-0">
    {reasons.map(reason => (
      <li class="mb-2">{reason}</li>
    ))}
  </ul>
</section>

<style>
.reasons-section {
  padding: 2rem;
  text-align: center;
}
.reasons-section ul {
  list-style: none;
  padding: 0;
}
.reasons-section li {
  margin: 0.5rem 0;
}
</style>
