---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<section class="text-section py-8 text-center">
  <h2 class="text-3xl font-semibold mb-4">{title}</h2>
  <p class="text-lg">{content}</p>
</section>

<style>
.text-section {
  padding: 2rem;
  text-align: center;
}
</style>
