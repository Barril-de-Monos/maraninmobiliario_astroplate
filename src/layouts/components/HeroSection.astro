---
interface Props {
  title: string;
  subtitle: string;
  backgroundImage: string;
  buttonLabel: string;
  buttonLink: string;
}

const { title, subtitle, backgroundImage, buttonLabel, buttonLink } = Astro.props;
---

<section class="hero" style={`background-image: url(${backgroundImage})`}>
  <div class="hero-content">
    <h1>{title}</h1>
    <p>{subtitle}</p>
    <a href={buttonLink} class="btn btn-primary">{buttonLabel}</a>
  </div>
</section>

<style>
.hero {
  height: 100vh;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-align: center;
}
.hero-content {
  max-width: 600px;
}
</style>
