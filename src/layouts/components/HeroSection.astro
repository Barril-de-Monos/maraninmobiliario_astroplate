---
interface Props {
  title: string;
  subtitle: string;
  backgroundImage: string;
  buttonLabel: string;
  buttonLink: string;
}

const { title, subtitle, backgroundImage, buttonLabel, buttonLink } = Astro.props;
---

<section class="hero bg-cover bg-center flex items-center justify-center text-white text-center" style={`background-image: url(${backgroundImage})`}>
  <div class="hero-content max-w-lg">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-xl mb-6">{subtitle}</p>
    <a href={buttonLink} class="btn btn-primary">{buttonLabel}</a>
  </div>
</section>

<style>
.hero {
  height: 100vh;
}
</style>
