---
import type { CollectionEntry } from "astro:content";
import { FaGithub, FaTwitter, FaLinkedin } from "react-icons/fa";

interface Props {
  data: CollectionEntry<"authors">;
}

const { data }: { data: CollectionEntry<"authors"> } = Astro.props;
---

<div class="author-card p-4 bg-white rounded-lg shadow-md text-center dark:bg-darkmode-light">
  {data.data.image ? <img src={data.data.image} alt={data.data.title} class="w-24 h-24 rounded-full mx-auto mb-4" /> : null}
  <h3 class="text-xl font-semibold">{data.data.title}</h3>
  <p class="text-gray-600 dark:text-darkmode-text-light">{data.data.description}</p>
  <div class="mt-4 flex justify-center space-x-4">
    {data.data.social ? data.data.social.map((social) => (
      social && <a href={social.link} target="_blank" rel="noopener noreferrer" aria-label={social.name}>
        {social.icon === "FaGithub" && <FaGithub />}
        {social.icon === "FaTwitter" && <FaTwitter />}
        {social.icon === "FaLinkedin" && <FaLinkedin />}
      </a>
    )) : null}
  </div>
</div>

<style>
.author-card {
  @apply p-4 bg-white rounded-lg shadow-md text-center dark:bg-darkmode-light;
}
</style>
