---
interface Testimonial {
  quote: string;
  author: string;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section class="testimonials-section py-8 text-center">
  <h2 class="text-3xl font-semibold mb-8">What Customers Love About Us</h2>
  <div class="testimonials flex flex-wrap justify-center">
    {testimonials.map(testimonial => (
      <div class="testimonial max-w-xs m-4">
        <blockquote class="italic mb-2">"{testimonial.quote}"</blockquote>
        <p class="font-semibold">- {testimonial.author}</p>
      </div>
    ))}
  </div>
</section>
